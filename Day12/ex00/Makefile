NAME = ft_display_file
SRC = ./*c
OBJ = ./*o
HDR = ./
FLAG = -Wall -Wextra -Werror

all :
		@gcc -o $(NAME) $(FLAG) $(SRC)

clean :
		@rm -rf $(OBJ)

fclean : clean
		@rm -rf $(NAME)
